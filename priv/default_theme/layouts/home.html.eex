<main>
  <%= @block.(:hero, title: @site.title, subtitle: Map.get(@site, :description, "")) %>

  <%= @block.(:search, []) %>

  <section class="intro">
    <%= @inner_content %>
  </section>

  <%= @block.(:recent_content, limit: 5) %>

  <%= @block.(:social_links, links: Map.get(@site, :social_links, [])) %>

  <footer>
    <p>&copy; <%= Date.utc_today().year %> <%= Map.get(@site, :author, @site.title) %></p>
  </footer>
</main>
